		cp ${MOO_HOME}abs/x86_64/evemu-*-x86_64* ${ABS_BASE_DIR}mooOS-pkgs-64/
		cp ${MOO_HOME}abs/x86_64/evolution-data-server-nonprism-*-x86_64* ${ABS_BASE_DIR}mooOS-pkgs-64/
