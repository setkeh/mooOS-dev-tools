		cp ${MOO_HOME}abs/x86_64/geis-*-x86_64* ${ABS_BASE_DIR}mooOS-pkgs-64/
		cp ${MOO_HOME}abs/x86_64/gnome-control-center-ubuntu-*-x86_64* ${ABS_BASE_DIR}mooOS-pkgs-64/
		cp ${MOO_HOME}abs/x86_64/gnome-screensaver-ubuntu-*-x86_64* ${ABS_BASE_DIR}mooOS-pkgs-64/
